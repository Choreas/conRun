<?xml version='1.0' encoding='utf-8'?>
<widget id="proj.yunadinik.conrun" version="0.1.1">
    <name>conRun</name>
    <icon src="..\src\assets\conRunLogo.png" />
    <description>Confrontational, motivational movement app against CL (corona lethargy)</description>
    <author email="niklas.kosanke@web.de" href="https://github.com/Choreas/conRun">
       YuNadiNik
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <allow-navigation href="about:*" />
</widget>
